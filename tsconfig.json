{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowJs": true,
    "removeComments": true,
    "alwaysStrict": true,
    "emitBOM": true,
    "allowSyntheticDefaultImports": false
    // The deafult will include all packages under ./typings, and no packages from ./node_modules/@types.
    // "typeRoots" : ["./typings"] /* if this is specified, only typings in these folders are used, all else are ignored ! */
  },
  "exclude": [
    "node_modules",
    "bower_components",
    "dist",
    "**/*test.ts"
  ]
}